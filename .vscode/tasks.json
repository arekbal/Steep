{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-core",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Steep/Steep.csproj",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "build-examples",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Steep.Examples/Steep.Examples.csproj",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-bench",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/Steep.Bench"
            },
            "args": [
                "build",
                "-c",
                "RELEASE",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "bench",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/Steep.Bench"
            },
            "args": [
                "run",
                "-c",
                "RELEASE",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",            
            "args": [
                "test",
                "${workspaceFolder}/Steep.Tests/Steep.Tests.csproj",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Steep/Steep.csproj",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Steep/Steep.csproj",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        }
    ]
}
